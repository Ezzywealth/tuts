{
	"manifest_version": 3,
	"name": "HelpMeOut",
	"description": "HelpMeOut for chrome extension",
	"version": "1.0.0",
	"action": {
		"default_popup": "popup.html",
		"default_title": "HelpMeOut",
		"default_icon": "logo.png"
	},
	"permissions": ["tabs", "bookmarks", "storage", "identity"],
	"icons": {
		"16": "logo.png",
		"48": "logo.png",
		"128": "logo.png"
	},
	"options_page": "options.html",
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	]
}
